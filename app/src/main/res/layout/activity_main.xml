<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Main Activity!"
        android:textSize="24sp"
        android:padding="14dp"
        android:background="@color/black"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đặt thức ăn và đồ uống"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="60dp"/>

    <Button
        android:id="@+id/food_order_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn thức ăn"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/drink_order_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn đồ uống"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thoát"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/result_order_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bún bò"
            android:textSize="24sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="---"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp"/>

        <TextView
            android:id="@+id/result_order_drink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pepsi"
            android:textSize="24sp"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>